# Market-Rover 2.0 Environment Variables
# Copy this file to .env and fill in your actual values

# Google Gemini API Key (Required)
GOOGLE_API_KEY=your_google_api_key_here

# System Settings
MAX_ITERATIONS=15
LOOKBACK_DAYS=7
PORTFOLIO_FILE=Portfolio.csv

# Report Settings
REPORT_DIR=reports
CONVERT_TO_CRORES=true

# Parallel Execution Settings (Market-Rover 2.0)
MAX_PARALLEL_STOCKS=5
RATE_LIMIT_DELAY=1.0

# Web UI Settings (Market-Rover 2.0)
UPLOAD_DIR=uploads
WEB_PORT=8501
WEB_HOST=0.0.0.0

# News Sources
MONEYCONTROL_BASE_URL=https://www.moneycontrol.com

# Sentiment Thresholds
SENTIMENT_POSITIVE_THRESHOLD=0.3
SENTIMENT_NEGATIVE_THRESHOLD=-0.3
